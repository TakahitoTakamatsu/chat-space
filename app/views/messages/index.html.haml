.chat-side
  .side-header
    .side-header__box
      %h3.side-header__box__user-name
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group
          = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
        %li.side-header__box__menu__edit-user
          = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
  .chat-side__groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
      
.main-side
  .main-header
    .main-header__leftbox
      %h2.main-header__leftbox__corrent-group
        ユーザーネーム
      %ul.main-header__leftbox__member-list
        メンバー:
        %li.main-header__leftbox__member-list__member
          ユーザーネーム
    .main-header__edit-btn
      Edit

  .messages
    = render @messages
    .messages__datamessage__id
      .messages__upper__info
        %p.messages__upper__info__talker
          ユーザーネーム
        %p.messages__upper__info__date
          日付
      %p.messages__text
        テキスト

  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__message', placeholder: 'type a message'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          = fa_icon 'picture-o', class: 'icon'
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'